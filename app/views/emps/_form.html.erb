<%= form_for @emp, :html => { :class => "form-horizontal emp" } do |f| %>

    <% if @emp.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@emp.errors.count, "error") %> prohibited this emp from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @emp.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%= error_span(@emp[:code]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :uncoded_name, :class => 'form-control' %>
    </div>
    <%= error_span(@emp[:name]) %>
  </div>

  <div class="control-group">
    <%= f.label :dept, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:dept_code, Dept.order(:code), :code, :name, :include_blank => true, :class => 'form-control' ) %>  
    </div>
    <%= error_span(@emp[:name]) %>
  </div>

  <div class="control-group">
    <%= f.label :isadmin, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box 'isadmin', {:checked => @emp.isadmin }  %>  
    </div>
    <%= error_span(@emp[:name]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            emps_path, :class => 'btn btn-default' %>

<% end %>
