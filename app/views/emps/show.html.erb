<%- model_class = Emp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @emp.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @emp.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deptname) %>:</strong></dt>
  <dd><%= @emp.deptname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isadmin) %>:</strong></dt>
  <dd><%= check_box '', '', {:checked => @emp.isadmin, :disabled => true} %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              emps_path, :class => 'btn btn-default'  %>
<% if current_user.sysadmin? %>

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_emp_path(@emp), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                emp_path(@emp),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>